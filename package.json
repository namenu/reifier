{
  "name": "reifier",
  "version": "0.1.0",
  "description": "Git branch build artifact diff tool",
  "type": "module",
  "bin": {
    "reifier": "./dist/cli.js"
  },
  "exports": {
    ".": {
      "import": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "templates"
  ],
  "scripts": {
    "build": "bun build src/cli.ts --outfile dist/cli.js --target bun && cp -r src/templates dist/",
    "dev": "bun --watch src/cli.ts",
    "typecheck": "tsc --noEmit",
    "test": "bun test",
    "test:watch": "bun test --watch"
  },
  "dependencies": {
    "commander": "^12.1.0",
    "mustache": "^4.2.0",
    "simple-git": "^3.27.0"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/mustache": "^4.2.5",
    "typescript": "^5.7.2"
  }
}
